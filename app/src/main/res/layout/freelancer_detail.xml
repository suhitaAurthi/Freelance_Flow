<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Resume upload -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Freelancer Details"
            android:textAlignment="center"
            android:textColor="#023C34"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload resume (PDF / DOC / DOCX)"
            android:textSize="16dp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_select_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Resume"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:backgroundTint="#00695C"
            />

        <TextView
            android:id="@+id/tv_resume_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No resume selected"
            android:textColor="#444"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Photo upload -->
        <TextView
            android:id="@+id/label_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload profile photo (PNG / JPG)"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/btn_select_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Photo"
            android:backgroundTint="#00695C"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />

        <!-- Rate & Fee -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_photo_preview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="photo preview"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/btn_remove_photo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end|top"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="-12dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="center"
                android:visibility="gone"
                android:contentDescription="Remove photo"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </FrameLayout>

        <TextView
            android:id="@+id/label_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate per hour"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="serif"
            />

        <EditText
            android:id="@+id/et_rate_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="e.g., 5.00 $" />

        <TextView
            android:id="@+id/label_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform fee (%)"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="serif"
            />

        <EditText
            android:id="@+id/et_fee_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="e.g., 4.5 $" />

        <TextView
            android:id="@+id/tv_net_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00 per hour"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:fontFamily="serif"
            />

        <!-- Submit -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Continue"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:backgroundTint="#00695C"
            />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: The app saves the selected files locally (URI)."
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>
